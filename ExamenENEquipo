program EvaluacionPogramaSudoku;

uses crt;

type short=1..9;



var
namee: string;

i,k,j,n,l,p,q, vini ,lowi , zaz ,zoz :short;

ch,num:string[1];

x,y:integer; b,t:boolean; key:char;


M:array [1..9,1..9] of string[1];
xy:array [1..2,1..81] of integer;


label
theend,randoms;



begin
clrscr;


 textbackground(green);

 gotoxy(14,2);

 writeln(' B I E N V E N I D O S   A L ');

 textbackground(Black);

 gotoxy(15,4);

 TextColor(LightCyan); 

 writeln('+-------------------------+');

 gotoxy(15,5);

		write('|       '); 
		TextColor(LightRed);

		write('  ùì¢ùì§ùììùìûùìöùì§');

		TextColor(LightCyan);
		writeln('         |');
		gotoxy(15,6);
		writeln('+---------+-------+-------+');
 textbackground(Black);


 TextColor(white);

gotoxy(11,11);



gotoxy(17,10);
write('"ùìîùìùùì£ùìîùì°" ùìüùìêùì°ùìê ùìòùìùùìíùìòùìêùì°');
textbackground(blue);
Textcolor(white);
gotoxy(19,15);
writeln('CONTROLES DEL JUEGO:');
textbackground(Black);
writeln;
Textcolor(LightCyan);
gotoxy(2,17);
writeln(' W: ARRIBA, S: ABAJO , A: IZQUIERDA, D: DERECHA. P: FINALIZAR');

writeln;
TextBackground(red);
Textcolor(white);
gotoxy(22,19);
writeln('INSTRUCCIONES:');
writeln;
TextBackground(black);
Textcolor(white);
writeln();
gotoxy(2,21);
writeln('Regla 1: hay que completar las casillas vac√≠as con un solo n√∫mero del 1 al 9 ');
gotoxy(2,22);
writeln('Regla 2: en una misma fila no puede haber n√∫meros repetidos ');
gotoxy(2,23);
writeln('Regla 3: en una misma columna no puede haber n√∫meros repetidos ');
gotoxy(2,24);
writeln('Regla 4: en una misma regi√≥n no puede haber n√∫meros repetidos ');
gotoxy(2,25);
writeln('Regla 5: la soluci√≥n de un sudoku es √∫nica');


gotoxy(44,10);
readln;

clrscr;

gotoxy(2,2);
Textcolor( yellow);
writeln('INGRESE UN NOMBRE DE USUARIO PARA CONTINUAR : ');
Textcolor(white);
gotoxy(4,4);
readln(namee);
clrscr;

 Textcolor(white);


writeln(' _____________________________________________________ ');
writeln('|     |     |     |     |     |     |     |     |     |   1');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   2');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   3');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   4');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   5');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   6');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   7');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   8');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
writeln('|     |     |     |     |     |     |     |     |     |   9');
writeln('|_____|_____|_____|_____|_____|_____|_____|_____|_____|');
gotoxy(2,20);
TextBackground(yellow);
writeln('  1     2     3  |   4    5     6  |   7      8     9 ');
TextBackground(black);


 writeln;
 writeln;
writeln( ' usuario: ', namee, ' su partida ha sido creada con exito por favor disfrute de ella ');
writeln(' ');
writeln(' ');


Textcolor(RED);
writeln(' RECUERDE PRESIONAR "P" AL MOMENTO QUE QUIERA FINALIZAR');
Textcolor(WHITE);

Textcolor(LightCyan);
randomize;
for k:=1 to 9 do
begin
if k in [1..3] then
begin
vini:=1;
lowi:=3;
end
else if k in [4..6] then
begin

vini:=4;
lowi:=6;
end
else
begin
vini:=7;
lowi:=9
end;

for i:=1 to 9 do
begin
if i in [1..3] then
begin
zaz:=1;
zoz:=3;
end
else if i in [4..6] then
begin
zaz:=4;
zoz:=6;
end
else
begin
zaz:=7;
zoz:=9
end;


str(random(9)+1,ch);
b:=true;

for j:=1 to 9 do

b:=b and (ch <> M[j,k]);

for l:=1 to 9 do

b:=b and (ch <> M[i,l]);

for p:=vini to lowi do
for q:=zaz to zoz do

b:=b and (ch <> M[q,p]);

if b=true then

M[i,k]:=ch;

    end;
end;



x:=4;
for k:=1 to 9 do
begin
y:=2;
for i:=1 to 9 do
begin
gotoxy(x,y);
write(M[i,k]);
if M[i,k] <> '' then
begin
xy[1,k]:=x;
xy[2,k]:=y
end;
y:=y+2
end;
x:=x+6
end;




x:=4;
y:=2;
gotoxy(x,y);
repeat


key:=readkey;



case key of
'w' : y:=y-2;
's' : y:=y+2;
'd' : x:=x+6;
'a' : x:=x-6;
'p' : goto TheEnd;
'1' .. '9' : num:=key;
end;

case y of
0 : y:=2;
20 : y:=18;
end;
case x of
-2 : x:=4;
58 : x:=52;
end;
gotoxy(x,y);

write(num);

gotoxy(x,y);

num:='';


until keypressed;


TheEnd:
clrscr;
textbackground(red);
Textcolor(white);
gotoxy(28,4);
writeln('CREDITOS');
textbackground(black);
writeln();
writeln('       CREADORES:  JESUS JOAQUIN ZORRILLA MARCANO');
writeln();
writeln('                   ERIKA FRANCESKA BOADAS MILLAN');
writeln();
writeln('                   CAMILA VALENTINA GONZALEZ GONZALEZ');
writeln;
writeln('                   ESTUDIANTES DE INGENIERIA DE SISTEMAS-UNIMAR');

textbackground(Black);
Textcolor(LightCyan);

gotoxy(15,22);
write('    PRESIONE "ENTER" PARA FINALIZAR EL JUEGO');
readln; 

end.
